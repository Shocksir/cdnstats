<html>
  <head>
    <title>CDN Stats</title>
    <style type="text/css">
      html, body {
        margin: 0;
        padding: 15px;
        font-family: sans-serif;
      }
      table td, table th {
        padding: 0 10px;
      }
      .right {
        text-align: right;
      }
      .left {
        text-align: left;
      }
    </style>
  </head>
  <body>
    <h1>CDN Stats</h1>

    <h2>Global</h2>

    <h3>Summary<h3>

    <table>
      <tr>
        <td>Reqs/sec (average):</td>
        <td class="right">{{.Summary.Rps}}</td>
      <tr>
      <tr>
        <td>Bytes/sec (average):</td>
        <td class="right">{{.Summary.Bps}}</td>
      </tr>
    </table>

    <h3>By hours</h3>
    <table>
      <thead>
        <tr>
          <th class="right">Hour</th>
          <th class="right">Reqs/sec</th>
          <th class="right">Bytes/sec</th>
        </tr>
      </thead>
      <tbody>
        {{range $index, $el := .ByHour}}
          <tr>
            <td class="right">{{$index}}</td>
            <td class="right">{{$el.Rps}}</td>
            <td class="right">{{$el.Bps}}</td>
          </tr>
        {{end}}
      </tbody>
    </table>

    <h3>By path</h3>
    <table>
      <thead>
        <tr>
          <th class="left">Path</th>
          <th class="right">Bytes</th>
        </tr>
      </thead>
      <tbody>
        {{range .ByPath}}
          <tr>
            <td class="left">{{.Name}}</td>
            <td class="right">{{.Bytes}}</td>
          </tr>
        {{end}}
      </tbody>
    </table>

    <h3>By referer<h3>
    <table>
      <thead>
        <tr>
          <th class="left">Referer</th>
          <th class="right">Bytes</th>
        </tr>
      </thead>
      <tbody>
        {{range .ByReferer}}
          <tr>
            <td class="left">{{.Name}}</td>
            <td class="right">{{.Bytes}}</td>
          </tr>
        {{end}}
      </tbody>
    </table>
  </body>
</html>
